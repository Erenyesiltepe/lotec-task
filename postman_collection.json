{
    "info": {
        "name": "Task Management API",
        "description": "API collection for testing task management endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "taskId",
            "value": "1",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Create Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"My New Task\",\n  \"assignee\": \"John Doe\",\n  \"completed\": false\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/tasks",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create Task (Minimal)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Task with defaults\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/tasks",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get All Tasks",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Completed Tasks",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks?completed=true",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "completed",
                                    "value": "true"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Incomplete Tasks",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks?completed=false",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "completed",
                                    "value": "false"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Task",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Task Title\",\n  \"assignee\": \"Jane Doe\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/tasks/{{taskId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "{{taskId}}"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Mark Task Complete",
                    "request": {
                        "method": "PATCH",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks/{{taskId}}/complete",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "{{taskId}}",
                                "complete"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Mark Task Incomplete (Undo)",
                    "request": {
                        "method": "PATCH",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks/{{taskId}}/undo",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "{{taskId}}",
                                "undo"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Task",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/tasks/{{taskId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "tasks",
                                "{{taskId}}"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Health Check",
            "item": [
                {
                    "name": "API Root",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ]
}